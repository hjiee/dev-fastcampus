<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hjiee.fastcampus">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fastcampus"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".part2.chapter1.Chapter1Activity" />
        <activity android:name=".part2.chapter1.Chapter1ResultActivity" />
        <activity android:name=".part2.chapter2.Chapter2Activity" />
        <activity
            android:name=".part2.chapter3.Chapter3Activity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity
            android:name=".part2.chapter3.DiaryActivity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity android:name=".part2.chapter4.Chapter4Activity" />
        <activity
            android:name=".part2.chapter5.Chapter5Activity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity
            android:name=".part2.chapter5.PhotoFrameActivity"
            android:screenOrientation="sensor"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity android:name=".part2.chapter6.Chapter6Activity" />
        <activity android:name=".part2.chapter7.Chapter7Activity" />
        <activity android:name=".part2.chapter8.Chapter8Activity" />

        <activity android:name=".part3.chapter1.Chapter1Activity" />
        <activity android:name=".part3.chapter2.Chapter2Activity" />
        <activity android:name=".part3.chapter3.Chapter3Activity" />
        <activity android:name=".part3.chapter4.Chapter4Activity" />
        <activity android:name=".part3.chapter4.DetailActivity" />
        <activity android:name=".part3.chapter5.Chapter5Activity" />
        <activity android:name=".part3.chapter6.Chapter6Activity" />
        <activity android:name=".part3.chapter7.Chapter7Activity" />

        <activity android:name=".part4.chapter1.Chapter1Activity" />
        <activity android:name=".part4.chapter2.Chapter2Activity" />
        <activity android:name=".part4.chapter3.Chapter3Activity" />
        <activity android:name=".part4.chapter4.Chapter4Activity" />
        <activity android:name=".part4.chapter5.Chapter5Activity" />
        <activity android:name=".part4.chapter6.Chapter6Activity" />
        <activity android:name=".part4.chapter7.Chapter7Activity" />

        <service
            android:name=".part3.chapter1.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name=".part3.chapter3.AlarmReceiver"
            android:exported="false" />
    </application>

</manifest>